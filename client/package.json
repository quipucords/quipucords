{
  "name": "quipucords-ui",
  "version": "0.0.1",
  "description": "Quipucords UI",
  "author": "Red Hat",
  "license": "GPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/quipucords/quipucords.git"
  },
  "bugs": {
    "url": "https://github.com/quipucords/quipucords/issues"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "api:mock": "sh ./scripts/api.sh -p 4000 -f \"$(pwd)/../docs/swagger.yml\"",
    "api:quipucords": "sh ./scripts/api.sh -p 4000",
    "api:update": "npm run api:mock -- -u; npm run api:quipucords -- -u",
    "api:doc": "node ./scripts/swagger.js & open http://localhost:4040/docs/api",
    "build": "react-scripts build",
    "build:prod": "npm run build && mkdir -p ../quipucords/client && cp -R ./build/* ../quipucords/client",
    "create-react-app": "create-react-app",
    "start": "run-p -l api:mock api:doc start:client",
    "start:client": "react-scripts start",
    "start:quipucords-docker": "npm run api:quipucords; open http://localhost:4000/index.html",
    "start:quipucords": "open http://127.0.0.1:8000/index.html; source ../venv/bin/activate; cd ../; make serve",
    "test": "run-s test:**",
    "test:lint-js": "eslint --ext=js --ext=jsx src",
    "test:unit": "react-scripts test --env=jsdom"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1",
    "patternfly": "^3.35.1",
    "patternfly-react": "^0.24.1",
    "react": "^16.2.0",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.17",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "create-react-app": "^1.4.3",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.6.1",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.16.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "swagger-ui-express": "^2.0.14",
    "yamljs": "^0.3.0"
  }
}
